{% extends 'base.html.twig' %}

{% block content %}
    <div id="content" class="meme">
        <h2>{{ meme.title }}</h2>

        {{ meme.getDescription() }}
        <img src="{{ meme.imageUrl }}">
        {{ meme.creationDate|date() }}
        <br>
        {{ meme.author.username }}

        <div id="comments">
            <h3>{% trans %}main.comments{% endtrans %}</h3>
            {% if app.user %}
                {{ render(controller('AppBundle:Comment:_commentForm', { 'subjectId': meme.id })) }}
            {% else %}
                {% trans %}log in to post comment{% endtrans %}
            {% endif %}
            {{ render(controller('AppBundle:Comment:_commentList', { 'subjectId': meme.id })) }}
        </div>
    </div>
{% endblock %}