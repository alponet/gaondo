<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Gaondo{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('js/fontawesome-all.min.js') }}"></script>
    </head>
    <body>
        {% block header %}
            <div id="header">
                <div class="header">
                    <a href="/">
                      <div class="logo"></div>
                    </a>
                    <div class="nav-wrapper">
                        <div class="nav nav-add">
                            <a href="/newMeme" class="button-red">{% trans %}main.upload{% endtrans %}</a>
                        </div>
                        <div class="nav nav-user">
                            <div class="user">
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <a href="/profile">
                                        <div class="avatar" style="background-image: url({{
                                        web_image(app.user.avatarUrl).zoomCrop(40,40,0,'center','center')
                                        }})"></div>
                                    </a>
                                {% else %}
                                    <a href="/login" class="button-red">{% trans %}main.login{% endtrans %}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

        <div id="content">
            {% block content %}
                Welcome to Gaondo!
            {% endblock %}
        </div>

        <div id="footer">
            <div class="copyright">
                {% if app.user %}
                    {% if app.user.isAdmin %}
                        <a href="/admin" class="button-red">Users</a>
                    {% endif %}
                {% endif %}
                <span>Â© 2018</span>
            </div>
        </div>
        
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>
