<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Gaondo{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block header %}
            <div id="header">
                <div class="header">
                    <h1 class="logo">
                        <a href="/">Gaondo</a>
                    </h1>
                    <div class="nav">
                        {% if app.user %}
                            <a href="/#!newMeme">{% trans %}main.upload{% endtrans %}</a>
                            <a href="/#!profile">{{ app.user.username }}</a>
                            <a href="/logout">{% trans %}main.login{% endtrans %}</a>
                        {% else %}
                            <a href="/#!register">{% trans %}main.register{% endtrans %}</a>
                            <a href="/login">{% trans %}main.login{% endtrans %}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block content %}
            <div id="content"></div>
        {% endblock %}

        <div id="footer">
            <div class="copyright">Â© 2017</div>
        </div>

        {% block scripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
